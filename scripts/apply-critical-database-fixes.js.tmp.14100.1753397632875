#!/usr/bin/env node

/**
 * Apply Critical Database Schema Fixes
 * 
 * This script applies Migration 005 to fix all critical database schema issues
 * identified by the validation agents.
 */

const path = require('path');
const { initializeDb } = require('../src/utils/initializeDb');
const { Migration005 } = require('../migrations/005_fix_database_schema_critical_issues');

async function applyCriticalFixes() {
    console.log('ðŸ”§ Applying Critical Database Schema Fixes...');
    console.log('==================================================');
    
    try {
        // Initialize database connection
        console.log('ðŸ“Š Initializing database connection...');
        const { db } = await initializeDb();
        
        // Create migration instance
        const migration = new Migration005(db);
        
        // Check if migration is needed
        console.log('ðŸ” Checking if migration is needed...');
        const isNeeded = migration.isNeeded();
        
        if (!isNeeded) {
            console.log('âœ… Migration not needed - all fixes already applied');
            return;
        }
        
        console.log('âš¡ Migration needed - applying fixes...');
        
        // Get stats before migration
        const statsBefore = migration.getStats();
        console.log('ðŸ“Š Database stats before migration:', statsBefore);
        
        // Apply migration
        console.log('ðŸ”„ Applying Migration 005...');
        migration.up();
        
        // Validate migration
        console.log('ðŸ” Validating migration...');
        migration.validate();
        
        // Get stats after migration
        const statsAfter = migration.getStats();
        console.log('ðŸ“Š Database stats after migration:', statsAfter);
        
        // Show improvement summary
        if (statsBefore && statsAfter) {
            console.log('\nðŸ“ˆ Migration Summary:');
            console.log(`   Relationship Evidence Records: ${statsBefore.relationshipEvidence} â†’ ${statsAfter.relationshipEvidence}`);
            console.log(`   Records with Relationship ID: ${statsBefore.relationshipEvidenceWithId} â†’ ${statsAfter.relationshipEvidenceWithId}`);
            console.log(`   Tracking Records: ${statsBefore.trackingRecords} â†’ ${statsAfter.trackingRecords}`);
            console.log(`   Total Indexes: ${statsBefore.indexCount} â†’ ${statsAfter.indexCount}`);
        }
        
        console.log('\nâœ… Critical database schema fixes applied successfully!');
        console.log('ðŸŽ¯ The following issues have been resolved:');
        console.log('   âœ“ Fixed relationship_evidence.relationship_id NULL issues');
        console.log('   âœ“ Added missing performance indexes');
        console.log('   âœ“ Created relationship_evidence_tracking table');
        console.log('   âœ“ Fixed data integrity issues');
        console.log('   âœ“ Added Neo4j ingestion optimization');
        
    } catch (error) {
        console.error('âŒ Error applying critical database fixes:', error);
        console.error('Stack trace:', error.stack);
        process.exit(1);
    }
}

// Run if called directly
if (require.main === module) {
    applyCriticalFixes()
        .then(() => {
            console.log('\nðŸ Script completed successfully');
            process.exit(0);
        })
        .catch(error => {
            console.error('\nðŸ’¥ Script failed:', error);
            process.exit(1);
        });
}

module.exports = { applyCriticalFixes };